<% include partials/header %>
<% include partials/nav %>
<% include partials/subnav_profile %>

<div class="container">

  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs" id="profile-nav" role="tablist">
        <li class="active"><a href="#">My Upcoming Events</a></li>
        <li><a href="#">My Past Events</a></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

    <% if (favShows.length === 0) { %>
              <h3 class="no-shows">You dont like any shows?! <br>Sad face.</h3>

          <% } else { %>
      <div class="eventList">
           <% favShows.forEach(function(show) { %>
          <div id="eventItem">
            <div class="col-md-8 col-sm-6">
                <h5 class="artist-name white profile-header"><%= show.dataValues.artist %></h5>
                <p>
                  <div class="date-box" >
                    <div class="month"><%= show.month %></div>
                    <div class="day"><%= show.day %></div>
                  </div>
                </p>

                <div class="event-details">
                  <span class="venue">
                    <a href="#"><%= show.dataValues.venue %></a>
                  </span>
                  <% if (show.time === null) {%>
                    <span></span>
                  <% } else { %>
                    <span> at <%= show.time %></span>

                  <% } %>
                  <p><%= show.dataValues.location %></p>
                  <p>
                    <form id="favorite" action="/profile/delete?_method=delete" method="POST">
                      <input name="FavShowId" type="hidden" value="<%=show.dataValues.id %>">
                      <input name="FavShowId" type="hidden" value="<%=show.dataValues.id %>">
                      <button id="favorite-btn" type="submit" class="btn-favorite-selected"><span class="glyphicon glyphicon-star"></span>Liked!</button>
                    </form>
                  </p>
                </div>
            </div>

            <iframe src="https://embed.spotify.com/?uri=<%=show.dataValues.track_id %>" frameborder="0" allowtransparency="true"></iframe>

          </div>
          <% }) %>
          <% } %>

      </div>
    </div>
  </div>

</div>

<% include partials/footer %>